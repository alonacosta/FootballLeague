@model FootballLeague.Data.Entities.Incident

@{
    ViewData["Title"] = "Delete";
}

<div class="shadow-none p-3 mb-5 bg-body-tertiary rounded bg-white">
    <h3>Delete Incident</h3>

    <h6>Are you sure you want to delete this?</h6>
    <hr />
    <div>    
    
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Player)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Player.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Match.MatchName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Match.MatchName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OccurenceName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OccurenceName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EventTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EventTime)
            </dd>
        </dl>
    
        <form asp-action="Delete" id="deleteForm" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="button" class="btn btn-danger" id="btnDeleteItem"><i class="fas fa-trash"></i> Delete</button>
            <a asp-action="Index" class="btn btn-success"><i class="fas fa-chevron-left"></i> Back to List</a>
        </form>
    </div>
</div>

<div id="deleteDialog" class="modal fade">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Delete Confirmation</h4>
                <button type="button" class="close" data-dismiss="modal"><i class="fa fa-window-close"></i></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this incident?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="btnYesDelete">Yes</button>
                <button type="button" class="btn btn-success" id="btnNoDelete">No</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnDeleteItem").click(function () {
                $("#deleteDialog").modal("show");
            });

            $("#btnNoDelete").click(function () {
                $("#deleteDialog").modal("hide");
            });

            $("#btnYesDelete").click(function () {
                $("#deleteForm").submit();
            });
        });
    </script>
}

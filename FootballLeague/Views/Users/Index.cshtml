@model IEnumerable<FootballLeague.Models.UserViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="shadow-none p-3 mb-5 bg-body-tertiary rounded bg-white">

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading row">
                    <h3 class="col panel-title">Users</h3>
                    <p class="col">
                        <a asp-action="Register" asp-controller="Account" class="btn btn-primary"><i class="fas fa-plus"></i> Register New User</a>
                    </p>
                </div>
                <div class="panel-body table-responsive">
                    <table class="table table-hover table-striped" id="TableUsers">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.ImageId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FullName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PhoneNumber)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ClubId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FunctionId)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@Url.Content(item.ImageFullPath)" alt="Club logo" style="width:50px;height:auto;max-width:100%;max-height:auto;" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FullName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Club.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Function.NamePosition)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

   

</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#TableUsers').DataTable();
        });
    </script>
}


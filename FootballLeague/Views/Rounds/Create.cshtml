@model FootballLeague.Data.Entities.Round

@{
    ViewData["Title"] = "Create";
}

<div class="shadow-none p-3 mb-5 bg-body-tertiary rounded bg-white">
    <h3>Create new round</h3>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateStart" class="control-label"></label>

                     <div class="input-group">
                        <input asp-for="DateStart" id="DateStart" class="form-control" data-toggle="flatpickr" placeholder="Select Date..." />
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                        </div>
                        <span asp-validation-for="DateStart" class="text-danger"></span>
                    </div>
                </div>           
                <div class="form-group">
                   <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Create</button>
                    <a asp-action="Index" class="btn btn-success"><i class="fas fa-chevron-left"></i> Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            flatpickr("#DateStart", {
                enableTime: true,
                // minDate: "today",
                dateFormat: "Y-m-d H:i",
            });
        });
    </script>
}


@model FootballLeague.Models.ClubViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>
    Edit Club - 
    <img src="@Url.Content(Model.ImageFullPath)" alt="Club logo" style="width:50px;height:50px;max-width:100%;max-height:auto;" />
    <span style="color: #00141E; font-style: italic;">@Model.Name</span>
</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageId" />
            
            <partial name="_Clubs" />

            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save</button>
                @if  (this.User.IsInRole("Admin")) {
					<a asp-action="Index" class="btn btn-success"><i class="fas fa-chevron-left"></i> Back to List</a>
                }
                @if (this.User.IsInRole("Representative"))
                {
                    <a asp-action="ClubDetails" class="btn btn-success"><i class="fas fa-chevron-left"></i> Back to Club Details</a>
                }

            </div>
        </form>
    </div>
    <div class="col-md-4">
        <img src="@Url.Content(Model.ImageFullPath)" alt="Club logo" style="width:250px;height:250px;max-width:100%;max-height:auto;" />        
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

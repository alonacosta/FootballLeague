@model FootballLeague.Models.MatchViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="shadow-none p-3 mb-5 bg-body-tertiary rounded bg-white">
    <h3>Delete Match</h3>

    <h6>Are you sure you want to delete this?</h6>
    <hr />
    <div>
       
        <dl class="row">
            <dt class="col-sm-2">
                Match
            </dt>
            <dd class="col-sm-10">
                <div class="row d-inline-flex align-items-center">
                    <div class="d-block mr-5">
                        <div>
                            <img src="@Model.ImagePathHomeTeam" alt="@Model.HomeTeam" style="width: 35px; height: 35px; margin-right: 5px; " />
                            @Html.DisplayFor(model => model.HomeTeam)
                        </div>
                        <div>
                            <img src="@Model.ImagePathAwayTeam" alt="@Model.HomeTeam" style="width: 35px; height: 35px;margin-right: 5px;" />
                            @Html.DisplayFor(model => model.AwayTeam)
                        </div>
                    </div>
                    <div class="ml-3">
                        <div>@Html.DisplayFor(model => model.HomeScore)</div>
                        <div class="mt-2">@Html.DisplayFor(model => model.AwayScore)</div>
                    </div>
                </div>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MatchState)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MatchState)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StartDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StartDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Round)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Round.Name)
            </dd>
        </dl>
    
        <form asp-action="Delete" id="deleteForm" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="button" class="btn btn-danger" id="btnDeleteItem"><i class="fas fa-trash"></i> Delete</button>
            <a asp-action="Index" class="btn btn-success"><i class="fas fa-chevron-left"></i> Back to List</a>
        </form>
    </div>
</div>

<div id="deleteDialog" class="modal fade">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Delete Confirmation</h4>
                <button type="button" class="close" data-dismiss="modal"><i class="fa fa-window-close"></i></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this match?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="btnYesDelete">Yes</button>
                <button type="button" class="btn btn-success" id="btnNoDelete">No</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnDeleteItem").click(function () {
                $("#deleteDialog").modal("show");
            });

            $("#btnNoDelete").click(function () {
                $("#deleteDialog").modal("hide");
            });

            $("#btnYesDelete").click(function () {
                $("#deleteForm").submit();
            });
        });
    </script>
}
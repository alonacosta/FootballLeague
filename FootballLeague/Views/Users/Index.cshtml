@model IEnumerable<FootballLeague.Models.UserViewModel>

@{
    ViewData["Title"] = "Index";
}
<div class="d-flex justify-content-between align-items-center mt-5">

    <h2>Users</h2>
    <p class="align-self-center mb-0">
        <a asp-action="Register" asp-controller="Account" class="btn btn-primary">Register New User</a>
    </p>
</div>

<table class="table mt-3">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImageId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClubId)
            </th>   
            <th>
                @Html.DisplayNameFor(model => model.FunctionId)
            </th>        
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>               
                <td>                    
                   <img src="@Url.Content(item.ImageFullPath)" alt="Club logo" style="width:50px;height:auto;max-width:100%;max-height:auto;" />                    
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Club.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Function.NamePosition)
                </td>              
            </tr>
            }
    </tbody>
</table>


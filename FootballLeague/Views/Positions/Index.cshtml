@model IEnumerable<FootballLeague.Data.Entities.Position>

@{
    ViewData["Title"] = "Index";
}

<div class="shadow-none p-3 mb-5 bg-body-tertiary rounded bg-white">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading row">
                    <h3 class="col panel-title">Positions</h3>
                    <p class="col">
                        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-save"></i> Create New</a>
                    </p>
                </div>
                <div class="panel-body table-responsive">
                    <table class="table table-hover table-striped" id="TablePosition">
                        <thead>
                            <tr>
                                <th style="width: auto;">
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th style="width: 1%;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info mr-2"><i class="fas fa-list"></i></a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning mr-2"><i class="fas fa-edit"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#TablePosition').DataTable();
        });
    </script>
}
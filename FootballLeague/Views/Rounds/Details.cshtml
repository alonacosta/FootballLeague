@model FootballLeague.Data.Entities.Round

@{
    ViewData["Title"] = "Details";
}

<div class="shadow-none p-3 mb-5 bg-body-tertiary rounded bg-white">
    <h3>Round Details</h3>
    <hr />
    <div>   
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DateStart)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DateStart)
            </dd>        
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.State)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.State)
            </dd>
        </dl>
    </div>
    <div>
         @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("SportsSecretary"))
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fas fa-edit"></i> Edit</a>
        }
        <a asp-action="Index" class="btn btn-success"><i class="fas fa-chevron-left"></i> Back to List</a>
    </div>
</div>

@model FootballLeague.Data.Entities.Club

@{
    ViewData["Title"] = "Delete";
}
<div class="shadow-none p-3 mb-5 bg-body-tertiary rounded bg-white">
	<h3>Delete Club</h3>

	<h6 class="mt-3">Are you sure you want to delete this?</h6>
	<div>
		<hr />
		<div class="row mt-3">  
			 <div class="col-md-5">
				<dl class="row">
					<dt class="col-sm-4">
						@Html.DisplayNameFor(model => model.Name)
					</dt>
					<dd class="col-sm-8">
						@Html.DisplayFor(model => model.Name)
					</dd>				
					<dt class="col-sm-4">
						@Html.DisplayNameFor(model => model.Stadium)
					</dt>
					<dd class="col-sm-8">
						@Html.DisplayFor(model => model.Stadium)
					</dd>
					<dt class="col-sm-4">
						@Html.DisplayNameFor(model => model.Capacity)
					</dt>
					<dd class="col-sm-8">
						@Html.DisplayFor(model => model.Capacity)
					</dd>
					<dt class="col-sm-4">
						@Html.DisplayNameFor(model => model.HeadCoach)
					</dt>
					<dd class="col-sm-8">
						@Html.DisplayFor(model => model.HeadCoach)
					</dd>
				</dl>
			 </div>
		<div class="col-md-7 align-content-md-start">
			<img src="@Url.Content(Model.ImageFullPath)" alt="Club logo" style="width:auto;height:150px;max-width:100%;max-height:auto;" />
		</div>
		</div>

		<form asp-action="Delete" id="deleteForm" method="post">
			<input type="hidden" asp-for="Id" />
			<button type="button" class="btn btn-danger" id="btnDeleteItem"><i class="fas fa-trash"></i> Delete</button>
			<a asp-action="Index" class="btn btn-success"><i class="fas fa-chevron-left"></i> Back to List</a>
		</form>

	</div>
</div>

<div id="deleteDialog" class="modal fade">
	<div class="modal-dialog modal-sm">
		<div class="modal-content">
			<div class="modal-header">
				<h4 class="modal-title">Delete Confirmation</h4>
				<button type="button" class="close" data-dismiss="modal"><i class="fa fa-window-close"></i></button>
			</div>
			<div class="modal-body">
				<p>Are you sure you want to delete this club?</p>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-danger" id="btnYesDelete">Yes</button>
				<button type="button" class="btn btn-success" id="btnNoDelete">No</button>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script type="text/javascript">
		$(document).ready(function () {
			$("#btnDeleteItem").click(function () {
				$("#deleteDialog").modal("show"); 
			});

			$("#btnNoDelete").click(function () {
				$("#deleteDialog").modal("hide"); 
			});

			$("#btnYesDelete").click(function () {
				$("#deleteForm").submit(); 
			});
		});
	</script>
}

	

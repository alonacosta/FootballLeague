@model FootballLeague.Data.Entities.Player

@{
    ViewData["Title"] = "Delete";
}

<div class="shadow-none p-3 mb-5 bg-body-tertiary rounded bg-white">
	<h3>Delete</h3>
	<div>
		<h6>Are you sure you want to delete this?</h6>
		<hr />
		<div class="row d-flex align-items-center">
			<div class="col-md-3">
				<img src="@Url.Content(Model.ImagePlayerFullPath)" alt="Image" style="width:130px;height:130px;max-width:100%;height:auto;" />
			</div>
			<div class="col-md-9  ">
				<dl class="row">
					<dt class="col-sm-2">
						@Html.DisplayNameFor(model => model.Name)
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.Name)
					</dd>
					<dt class="col-sm-2">
						@Html.DisplayNameFor(model => model.Position)
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.Position.Name)
					</dd>
					<dt class="col-sm-2">
						@Html.DisplayNameFor(model => model.Club)
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.Club.Name)
					</dd>
				</dl>
			</div>
		</div>

		<form asp-action="Delete" class="mt-3" id="deleteForm">
			<input type="hidden" asp-for="Id" />
			<button type="button" class="btn btn-danger" id="btnDeleteItem"><i class="fas fa-trash"></i> Delete</button>
			<a asp-action="Index" class="btn btn-success"><i class="fas fa-chevron-left"></i> Back to List</a>    
		</form>
	</div>
</div>

<div id="deleteDialog" class="modal fade">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Delete Confirmation</h4>
                <button type="button" class="close" data-dismiss="modal"><i class="fa fa-window-close"></i></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this player?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="btnYesDelete">Yes</button>
                <button type="button" class="btn btn-success" id="btnNoDelete">No</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnDeleteItem").click(function () {
                $("#deleteDialog").modal("show");
            });

            $("#btnNoDelete").click(function () {
                $("#deleteDialog").modal("hide");
            });

            $("#btnYesDelete").click(function () {
                $("#deleteForm").submit();
            });
        });
    </script>
}
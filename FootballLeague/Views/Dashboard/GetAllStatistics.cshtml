@model FootballLeague.Models.DashboardViewModel
@{
    ViewData["Title"] = "Classifications";
}

<h2>Classifications</h2>

@foreach (var roundStat in Model.RoundStatistics)
{
	<h5 class="small mt-4"><b>@roundStat.RoundName</b></h5>
    <table class="table table-striped table-sm small">
        <thead>
            <tr>
                <th></th>
                <th>Club Name</th>
                <th class="text-center">Total Matches</th>
                <th class="text-center">Wins</th>
                <th class="text-center">Losses</th>
                <th class="text-center">Draws</th>
                <th class="text-center">Scored</th>
                <th class="text-center">Conceded</th>
                <th class="text-center">Points</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var stat in roundStat.Statistics)
            {
                <tr>
                    <td class="align-middle">@stat.Position</td>
                    <td class="align-middle"><img src="@Url.Content(stat.ImageFullPath)" alt="Club logo" style="width:35px;height:auto;max-width:100%;max-height:auto;" /> @stat.ClubName</td>
                    <td class="align-middle text-center">@stat.TotalMatches</td>
                    <td class="align-middle text-center">@stat.Wins</td>
                    <td class="align-middle text-center">@stat.Losses</td>
                    <td class="align-middle text-center">@stat.Draws</td>
                    <td class="align-middle text-center">@stat.GoalsScored</td>
                    <td class="align-middle text-center">@stat.GoalsConceded</td>
                    <td class="align-middle text-center">@stat.Points</td>
                </tr>
            }
        </tbody>
    </table>
}


